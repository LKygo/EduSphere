<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_messaging">

    <fragment
        android:id="@+id/navigation_messaging"
        android:name="com.kygoinc.edusphere.ui.messaging.MessagingFragment"
        android:label="@string/title_messaging"
        tools:layout="@layout/fragment_messaging" />

    <fragment
        android:id="@+id/navigation_resources"
        android:name="com.kygoinc.edusphere.ui.resources.ResourcesFragment"
        android:label="@string/title_resources"
        tools:layout="@layout/fragment_resources" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.kygoinc.edusphere.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.kygoinc.edusphere.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />
</navigation>