


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_14ssp"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="28dp"
    android:paddingBottom="@dimen/_14ssp"
    app:cardCornerRadius="8dp"
    android:id="@+id/cardDocument"
    app:cardElevation="@dimen/_60sdp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_14sdp">

        <ImageView
            android:id="@+id/imgResourceImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/_240sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/media_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgDownloadImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="@dimen/_14sdp"
            android:background="@drawable/bg_icon"
            android:elevation="@dimen/_40sdp"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/round_file_download_white_48"
            app:layout_constraintBottom_toBottomOf="@+id/imgResourceImage"
            app:layout_constraintEnd_toEndOf="@id/imgResourceImage" />

        <TextView
            android:id="@+id/txvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_18sdp"
            android:text="MySQL DB CheatSheet"
            android:textColor="@color/blue_500"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/imgEditImage"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgResourceImage" />

        <TextView
            android:id="@+id/txvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="This is a brief description of the resource displayed."
            android:textSize="@dimen/_10ssp"
            app:layout_constraintEnd_toEndOf="@id/txvTitle"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txvTitle" />

        <ImageView
            android:id="@+id/imgEditImage"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:src="@drawable/edit"
            app:layout_constraintBottom_toTopOf="@+id/imgDeleteImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgResourceImage" />

        <ImageView
            android:id="@+id/imgDeleteImage"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:src="@drawable/icon_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgEditImage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

